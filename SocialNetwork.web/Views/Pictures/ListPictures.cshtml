@model IEnumerable<SocialNetwork.web.Models.Profile.PictureViewModel>

@{
    ViewBag.Title = "Album";
}

<h2>Album</h2>

<div class="container">
    <div class="row" style="margin-bottom:">
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <a href='@Url.Action("Details", "Pictures", new { item.Id })' style="text-decoration: none; height: 100%; width: 100%;">
                    <img src="@Url.Content(item.PictureUrl)" alt="Profile Picture" style="width: 180px; height: 180px;" />
                    <p style="font-weight: normal; font-size: 12px; color: black; margin-top: 5px;">
                        @Html.DisplayFor(modelItem => item.Description)
                    </p>
                </a>
            </div>
        }
    </div>
</div>
