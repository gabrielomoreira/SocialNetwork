@model SocialNetwork.web.Models.Profile.ProfileViewModel

@{
    ViewBag.Title = Model.FirstName + " " + Model.LastName;
}

<h2>Details</h2>

<div>
    <h4>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h4>
    <hr />
    <div class="alert-info">
        <div>
            <img src="@Url.Content(Model.PictureUrl)" alt="Profile Picture" style="width: 150px; height: 150px;" />
        </div>
        <div>
            <h5>@Html.DisplayNameFor(model => model.BirthDate)</h5>
            <h5>@Html.DisplayFor(model => model.BirthDate)</h5>
        </div>
    </div>

</div>

<p>
    @Html.ActionLink("Atualizar perfil", "Update", Model)
    <!-- Html.ActionLink("Apagar perfil", "Delete", Model) -->

</p>

@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.AccountId)